<Window x:Class="GUI.PrefWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="PrefWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2.5*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            
        </Grid.RowDefinitions>
        <CheckBox Checked="FastCompress">Faster Compress</CheckBox>
        <CheckBox Grid.Column="1" Grid.Row="0" Checked="InclSysHidFile">Include system and hidden files</CheckBox>
        <CheckBox Grid.Column="0" Grid.Row="2" Checked="QuietOperation">Quiet operation</CheckBox>
        <CheckBox Grid.Row="1" Checked="CompressBetter">Compress better</CheckBox>
        <CheckBox Grid.Column="1" Grid.Row="1" Checked="StoreOnly">Store only</CheckBox>
        <CheckBox Grid.Column="1" Grid.Row="2" Checked="DelEntZipFile">Delete entries in zip file</CheckBox>
        <Button Grid.Column="5" Grid.Row="4" Click="Cancel">Cancel</Button>
        <Button Grid.Column="6" Grid.Row="4">Save and close</Button>
    </Grid>
</Window>
